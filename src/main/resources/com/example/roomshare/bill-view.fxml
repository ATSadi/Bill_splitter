<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.roomshare.BillController">
   <children>
      <Label text="Shared Bill Tracker" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" textFill="#7f8c8d">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <VBox spacing="15" prefWidth="500.0">
         <children>
            <Label text="Add New Expense" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="expenseNameField" promptText="Expense Name (e.g., Groceries, Restaurant, Utilities) *" />
            <TextField fx:id="amountField" promptText="Amount ($) *" />
            <TextField fx:id="payerField" promptText="Who paid? (Roommate name) *" />
            <TextField fx:id="splitBetweenField" promptText="Split between how many people? (e.g., 3 for 3 roommates)" />
            <Button fx:id="addExpenseButton" mnemonicParsing="false" onAction="#onAddExpenseClick" prefHeight="35.0" prefWidth="500.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Add Expense" />
         </children>
      </VBox>
      <VBox spacing="10" prefWidth="500.0">
         <children>
            <Label text="Expenses List:" textFill="#34495e">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ListView fx:id="expensesList" prefHeight="300.0" prefWidth="500.0" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Back to Home" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>

