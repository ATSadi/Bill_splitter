<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.roomshare.BalanceController">
   <children>
      <Label text="Balance &amp; Settlement" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" textFill="#7f8c8d">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <VBox spacing="15" prefWidth="600.0">
         <children>
            <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#onCalculateClick" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;" text="Calculate Balance" />
            <TextArea fx:id="balanceTextArea" editable="false" prefHeight="400.0" prefWidth="600.0" style="-fx-font-family: monospace; -fx-font-size: 12px;" wrapText="true" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Back to Home" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>

