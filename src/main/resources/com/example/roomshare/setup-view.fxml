<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.roomshare.SetupController">
   <children>
      <Label text="Setup Roommates &amp; Shared Bills" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" textFill="#7f8c8d">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <HBox spacing="30" alignment="CENTER">
         <children>
            <VBox spacing="15" prefWidth="350.0">
               <children>
                  <Label text="Add Roommates" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="roommateNameField" promptText="Full Name *" />
                  <TextField fx:id="roommateEmailField" promptText="Email (optional)" />
                  <TextField fx:id="roommatePhoneField" promptText="Phone (optional)" />
                  <Button fx:id="addRoommateButton" mnemonicParsing="false" onAction="#onAddRoommateClick" prefHeight="35.0" prefWidth="350.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Add Roommate" />
                  <Label text="Roommates List:" textFill="#34495e">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="roommatesList" prefHeight="200.0" prefWidth="350.0" />
               </children>
            </VBox>
            <VBox spacing="15" prefWidth="350.0">
               <children>
                  <Label text="Add Shared Bills" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="billNameField" promptText="Bill Name (e.g., Rent, WiFi, Gas) *" />
                  <TextField fx:id="billAmountField" promptText="Monthly Amount ($) *" />
                  <Button fx:id="addBillButton" mnemonicParsing="false" onAction="#onAddBillClick" prefHeight="35.0" prefWidth="350.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Add Bill" />
                  <Label text="Shared Bills List:" textFill="#34495e">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="billsList" prefHeight="200.0" prefWidth="350.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Back to Home" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>

