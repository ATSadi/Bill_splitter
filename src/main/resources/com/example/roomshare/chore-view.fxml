<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.roomshare.ChoreController">
   <children>
      <Label text="Chore Board" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" textFill="#7f8c8d">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <VBox spacing="10" prefWidth="500.0">
         <children>
            <Label text="Room Name" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="roomNameChoiceBox" prefWidth="500.0" />
         </children>
      </VBox>
      <VBox spacing="15" prefWidth="500.0">
         <children>
            <Label text="Add New Chore" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="choreNameField" promptText="Chore Name (e.g., Clean kitchen, Take out garbage) *" />
            <ComboBox fx:id="assignedToComboBox" promptText="Assigned to (Select roommate - optional)" editable="false" prefWidth="500.0" />
            <Button fx:id="addChoreButton" mnemonicParsing="false" onAction="#onAddChoreClick" prefHeight="35.0" prefWidth="500.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Add Chore" />
         </children>
      </VBox>
      <VBox spacing="10" prefWidth="500.0">
         <children>
            <Label text="Chores List:" textFill="#34495e">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ListView fx:id="choresList" prefHeight="300.0" prefWidth="500.0" />
            <Button fx:id="markCompleteButton" mnemonicParsing="false" onAction="#onMarkCompleteClick" prefHeight="35.0" prefWidth="500.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Mark Selected as Complete" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Back to Home" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>

